@page
@model App.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Practicing Dependency Injection!</h1>
    <p>A small web application to incorporate dependency injection design pattern.</p>

    <h2 class="my-3">All users</h2>

    <table class="table table-bordered table-striped table-hover my-3">
        <thead class="bg-info">
            <tr>
                <th>Document</th>
                <th>Document Type</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of birth</th>
                <th>Username</th>
            </tr>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Document</td>
                        <td>@user.DocumentType</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.DateOfBirth.ToShortDateString()</td>
                        <td>@user.Username</td>
                    </tr>                                        
                }
            </tbody>
        </thead> 
    </table>  
</div>
